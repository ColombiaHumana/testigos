<p id="notice"><%= notice %></p>

<h1>Witnesses</h1>

<table>
  <thead>
    <tr>
      <th>Doc number</th>
      <th>First name</th>
      <th>Second name</th>
      <th>Surname</th>
      <th>Second surname</th>
      <th>Has smartphone</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Foreing</th>
      <th>Department</th>
      <th>Municipality</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @witnesses.each do |witness| %>
      <tr>
        <td><%= witness.doc_number %></td>
        <td><%= witness.first_name %></td>
        <td><%= witness.second_name %></td>
        <td><%= witness.surname %></td>
        <td><%= witness.second_surname %></td>
        <td><%= witness.has_smartphone %></td>
        <td><%= witness.phone %></td>
        <td><%= witness.email %></td>
        <td><%= witness.foreing %></td>
        <td><%= witness.department %></td>
        <td><%= witness.municipality %></td>
        <td><%= link_to 'Show', witness %></td>
        <td><%= link_to 'Edit', edit_witness_path(witness) %></td>
        <td><%= link_to 'Destroy', witness, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

